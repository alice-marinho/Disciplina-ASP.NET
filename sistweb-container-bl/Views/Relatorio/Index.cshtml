@model IEnumerable<sistweb_container_bl.Models.BL>

@{
    ViewData["Title"] = "Relatório de BLs";
}

<h1>Relatório de BLs e Containers</h1>
<p>Visão completa de todos os documentos de embarque.</p>

<hr />

@foreach (var bl in Model)
{
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">BILL OF LADING (B/L) - NÚMERO: @bl.numero</h4>
        </div>
        <div class="card-body">
            <div class="row border-bottom pb-2 mb-2">
                <div class="col-md-6">
                    <strong>Consignee:</strong>
                    <p>@bl.consignee</p>
                </div>
                <div class="col-md-6">
                    <strong>Navio/Vessel:</strong>
                    <p>@bl.navio</p>
                </div>
            </div>

            <h5 class="mt-4">Containers Vinculados</h5>
            @if (bl.Containers.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Número do Container</th>
                            <th>Tipo (Dry, Reefer)</th>
                            <th>Tamanho (20, 40)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var container in bl.Containers)
                        {
                            <tr>
                                <td>@container.numero</td>
                                <td>@container.tipo</td>
                                <td>@container.tamanho</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Nenhum container associado a este BL.</p>
            }
        </div>
    </div>
}