@model IEnumerable<sistweb_container_bl.Models.Container>

@{
    ViewData["Title"] = "Lista de Containers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Criar Novo Container
    </a>
</div>

@if (Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>Número</th>
                        <th>Tipo</th>
                        <th>Tamanho</th>
                        <th>BL Associado</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.numero)</td>
                            <td>@Html.DisplayFor(modelItem => item.tipo)</td>
                            <td>@Html.DisplayFor(modelItem => item.tamanho)</td>
                            <td>@Html.DisplayFor(modelItem => item.BL.numero)</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes"><i class="bi bi-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Deletar"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        <i class="bi bi-info-circle-fill"></i>
        Nenhum container cadastrado no momento. Clique em "Criar Novo Container" para começar!
    </div>
}