@using Model
@model Model.Produto
@{
    ViewData["Title"] = "Novo Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-cart-plus-fill"></i> Cadastrar Novo Produto</h4>
                </div>
                
                <div class="card-body p-4 bg-light">
                    <form asp-action="Novo">
                        <div class="row">
                            <div class="col-md-7 mb-3">
                                <label asp-for="Nome" class="form-label fw-bold text-success">Nome do Produto</label>
                                <input asp-for="Nome" class="form-control form-control-lg" placeholder="Ex: Arroz Tio João 5kg" />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <div class="col-md-5 mb-3">
                                <label asp-for="Preco" class="form-label fw-bold text-success">Preço</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white text-success fw-bold">R$</span>
                                    <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="0,00" />
                                </div>
                                <span asp-validation-for="Preco" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label fw-bold text-success">Seção do Mercado</label>
                            <select asp-for="Categoria" 
                                    asp-items="Html.GetEnumSelectList<CategoriaProduto>()" 
                                    class="form-select form-select-lg border-success">
                                <option value="">-- Selecione a Seção --</option>
                            </select>
                            <span asp-validation-for="Categoria" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descricao" class="form-label fw-bold text-secondary">Detalhes / Marca</label>
                            <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descreva detalhes adicionais..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                                <i class="bi bi-check-lg"></i> Salvar Produto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}}