@model Model.Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-bold">✏️ Editar Produto</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Editar">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nome" class="form-label fw-bold text-muted"></label>
                                <input asp-for="Nome" class="form-control form-control-lg" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Preco" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="Preco" class="form-control form-control-lg" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label fw-bold text-muted"></label>
                            <input asp-for="Categoria" class="form-control" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descricao" class="form-label fw-bold text-muted"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Cancelar</a>
                            <input type="submit" value="Salvar Alterações" class="btn btn-warning btn-lg px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}