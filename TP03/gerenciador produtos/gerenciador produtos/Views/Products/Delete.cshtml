@model gerenciador_produtos.Models.Product

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<h3>Tem certeza que deseja excluir este produto?</h3>

<div class="details">
    <dl>
        <dt>Nome</dt>
        <dd>@Model.Nome</dd>

        <dt>Descrição</dt>
        <dd>@Model.Descricao</dd>

        <dt>Preço</dt>
        <dd>@Model.Preco.ToString("C")</dd>

        <dt>Quantidade em estoque</dt>
        <dd>@Model.Qtde_estoque</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn" style="background-color:#c62828;">Excluir</button>
    <a class="btn" href="~/Products">Cancelar</a>
</form>
