@model gerenciador_produtos.Models.Product

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Descricao" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Qtde_estoque"></label>
        <input asp-for="Qtde_estoque" class="form-control" />
        <span asp-validation-for="Qtde_estoque" class="field-validation-error"></span>
    </div>

    <button type="submit" class="btn btn-success me-2">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial")
