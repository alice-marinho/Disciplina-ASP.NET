@using Microsoft.AspNetCore.Identity
@using Model
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeCode</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP04.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Produto" asp-action="Index">
                    <i class="bi bi-cup-hot-fill"></i> CoffeeCode
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Produto" asp-action="Index">Cardápio</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            // USUÁRIO ESTÁ LOGADO
                            <li class="nav-item">
                                <span class="nav-link text-warning">
                                    <i class="bi bi-person-circle"></i> Olá, @UserManager.GetUserName(User)!
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white btn btn-link" asp-controller="Usuario" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Sair
                                </a>
                            </li>
                        }
                        else
                        {
                            // USUÁRIO NÃO ESTÁ LOGADO
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Usuario" asp-action="Register">
                                    <i class="bi bi-pencil-square"></i> Criar Conta
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Usuario" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 bg-light">
        <div class="container text-center py-3">
            &copy; 2025 - CoffeeCode System - Desenvolvido para Prova 2
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>