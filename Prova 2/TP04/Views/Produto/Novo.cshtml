@model PROVA02.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Novo Item";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-plus-circle"></i> Adicionar ao Menu</h4>
                </div>

                <div class="card-body p-4 bg-light">
                    <form asp-action="Novo">

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">Nome do Café/Salgado</label>
                            <input asp-for="Nome" class="form-control form-control-lg" placeholder="Ex: Mocha Caramelo" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Preco" class="form-label fw-bold">Preço</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white fw-bold">R$</span>
                                <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="0,00" />
                            </div>
                            <span asp-validation-for="Preco" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 form-check form-switch p-3 bg-white border rounded">
                            <input class="form-check-input ms-0 me-2" type="checkbox" asp-for="Status" checked style="transform: scale(1.3);">
                            <label class="form-check-label fw-bold pt-1" asp-for="Status">
                                &nbsp;&nbsp;&nbsp;Item disponível para venda imediata?
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-check-lg"></i> Salvar Item
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}