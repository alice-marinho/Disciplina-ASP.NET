@using Microsoft.AspNetCore.Identity
@using Model
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@model Model.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";

    var usuarioCriador = await UserManager.FindByIdAsync(Model.IdUsuarioCadastro.ToString());
    var usuarioEditor = await UserManager.FindByIdAsync(Model.IdUsuarioUpdate.ToString());

    string nomeCriador = usuarioCriador != null ? usuarioCriador.Nome : "Usuário Desconhecido (ID " + Model.IdUsuarioCadastro + ")";
    string nomeEditor = usuarioEditor != null ? usuarioEditor.Nome : "Usuário Desconhecido (ID " + Model.IdUsuarioUpdate + ")";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">☕ Detalhes do Item</h4>
                    @if (Model.Status)
                    {
                        <span class="badge bg-success">Disponível</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary">Indisponível</span>
                    }
                </div>

                <div class="card-body p-5 bg-light">
                    <h2 class="display-5 fw-bold text-dark mb-0">@Model.Nome</h2>
                    <h3 class="text-success fw-bold mb-4">@Model.Preco.ToString("C2")</h3>

                    <hr />

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="p-3 border rounded bg-white shadow-sm">
                                    <small class="text-muted text-uppercase fw-bold">Cadastrado por</small>
                                    <div class="d-flex align-items-center mt-2">
                                        <i class="bi bi-person-plus-fill fs-4 text-primary me-2"></i>
                                        <div>
                                            <span class="d-block fw-bold text-dark">@nomeCriador</span>
                                            <small class="text-muted">Criação inicial</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 border rounded bg-white shadow-sm">
                                    <small class="text-muted text-uppercase fw-bold">Última Edição por</small>
                                    <div class="d-flex align-items-center mt-2">
                                        <i class="bi bi-pencil-square fs-4 text-warning me-2"></i>
                                        <div>
                                            <span class="d-block fw-bold text-dark">@nomeEditor</span>
                                            <small class="text-muted">Última alteração</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-4">
                            <i class="bi bi-info-circle"></i> Faça login para ver quem cadastrou este item.
                        </div>
                    }

                    <div class="d-flex justify-content-end gap-2 mt-5">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a asp-action="Remover" asp-route-id="@Model.Id" class="btn btn-outline-danger" onclick="return confirm('Tem certeza?');">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning px-4 fw-bold shadow-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>